<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" android:paddingLeft="5dp"
    android:paddingTop="5dp"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="25dp" android:src="@drawable/line_shu"/>
    <TextView
        android:id="@+id/text" android:layout_toRightOf="@+id/image"
        android:layout_marginTop="5dp" android:text="粮食局"
        android:layout_width="wrap_content" android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>