<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/colorToolWhite"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent" android:id="@+id/about_us"
        android:layout_height="80dp" android:background="#FFD700">
        <TextView
            android:gravity="center_vertical|left"
            android:textSize="20sp" android:id="@+id/tv_title"
            android:text="领导之窗" android:textColor="#000000"
            android:layout_width="200dp" android:layout_marginLeft="25dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </RelativeLayout>
</LinearLayout>