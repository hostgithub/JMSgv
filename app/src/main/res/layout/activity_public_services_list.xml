<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical" android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" android:background="#EE3B3B">
        <ImageView android:id="@+id/iv_back"
            android:layout_width="50dp" android:src="@drawable/back"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/tv_title" android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:text="公共服务"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite" android:layout_marginTop="20dp"
            android:textSize="20sp" android:layout_marginLeft="5dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="40px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/edu_info"
                android:layout_height="80dp" android:background="#ffff">
                <TextView
                    android:gravity="center_vertical|left"
                    android:textSize="20sp"
                    android:text="教育信息" android:textColor="#000000"
                    android:layout_width="200dp" android:layout_marginLeft="26dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="26dp" />
                <ImageView
                    android:src="@drawable/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>
            <View
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="20px"/>

            <RelativeLayout
                android:layout_width="match_parent" android:id="@+id/social_security"
                android:layout_height="80dp" android:background="#ffff">
                <TextView
                    android:gravity="center_vertical|left"
                    android:textSize="20sp"
                    android:text="社会保障" android:textColor="#000000"
                    android:layout_width="200dp" android:layout_marginLeft="25dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"/>

            <RelativeLayout android:id="@+id/social_assistance"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:background="#ffff">
                <TextView
                    android:gravity="center_vertical|left"
                    android:textSize="20sp"
                    android:text="社会救助" android:textColor="#000000"
                    android:layout_width="200dp" android:layout_marginLeft="25dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"/>

            <RelativeLayout android:id="@+id/health_care_student"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:background="#ffff">
                <TextView
                    android:gravity="center_vertical|left"
                    android:textSize="20sp"
                    android:text="卫生计生" android:textColor="#000000"
                    android:layout_width="200dp" android:layout_marginLeft="25dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </RelativeLayout>
        </LinearLayout>

</LinearLayout>
