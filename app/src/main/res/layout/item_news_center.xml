<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="15dp"
    >

    <ImageView
        android:id="@+id/cover"
        android:layout_width="120dp"
        android:layout_height="84dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_image_loading"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cover"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cover"
        android:maxLines="2" android:layout_marginTop="5dp"
        android:textColor="#000" android:ellipsize="end"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="标题"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignBottom="@id/cover"
        android:textColor="#666666" android:layout_marginBottom="5dp"
        android:textSize="20sp"
        tools:text="2017-9-15 15:15"
        />
    <View
        android:layout_width="match_parent" android:background="@drawable/virtualline"
        android:layout_height="1dp" android:layout_below="@+id/cover"
        android:layout_marginTop="15dp"/>
</RelativeLayout>